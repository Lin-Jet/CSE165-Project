{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build & run",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "${file}",
                "-lGL",
                "-lglfw"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc"
        }
    ]
}
